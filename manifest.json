{
  "manifest_version": 3,
  "name": "G Flow",
  "description": "Keep the day flowing without breaking your flow",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/flow-dark.png"
  },
  "oauth2": {
    "client_id": "1020857444789-nnv7gph0vvb3c2e9he1u7tii0c55gkfn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "permissions": ["identity", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
