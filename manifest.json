{
  "manifest_version": 3,
  "name": "G Flow",
  "description": "Stay in the flow - see Gmail messages and Google Calendar events at-a-glance without switching tabs.",
  "version": "1.7",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "img/icon32.png"
  },
  "oauth2": {
    "client_id": "1020857444789-nnv7gph0vvb3c2e9he1u7tii0c55gkfn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "permissions": ["identity", "storage", "tabs"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
